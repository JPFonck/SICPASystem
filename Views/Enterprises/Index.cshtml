@model IEnumerable<SICPASystem.Models.EnterpriseModel>

@{
    ViewData["Title"] = "Enterprises List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Enterprises List</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Enterprises">Add new enterprise</a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Id)</td>
                        <td>@Html.DisplayNameFor(m => m.name)</td>
                        <td>@Html.DisplayNameFor(m => m.address)</td>
                        <td>@Html.DisplayNameFor(m => m.phone)</td>
                        <td>@Html.DisplayNameFor(m => m.status)</td>
                        <td>@Html.DisplayNameFor(m => m.modified_by)</td>
                        <td>@Html.DisplayNameFor(m => m.modified_date)</td>
                        <td>@Html.DisplayNameFor(m => m.created_by)</td>
                        <td>@Html.DisplayNameFor(m => m.created_date)</td>
                        <td>Actions</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.name</td>
                            <td>@item.address</td>
                            <td>@item.phone</td>
                            <td>@item.status</td>
                            <td>@item.modified_by</td>
                            <td>@item.modified_date</td>
                            <td>@item.created_by</td>
                            <td>@item.created_date</td>
                            <td>
                                <a asp-controller="Enterprises" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                                <a asp-controller="Enterprises" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No records</p>
        }
    </div>
</div>

