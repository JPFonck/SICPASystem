@model SICPASystem.Models.Department_EmployeeModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Department</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="id_department" class="control-label"></label>
                <select asp-for="id_department" class="form-control" asp-items="ViewBag.id_department"></select>
            </div>

            <div class="form-group">
                <label asp-for="id_employee" class="control-label"></label>
                <select asp-for="id_employee" class="form-control" asp-items="ViewBag.id_employee"></select>
            </div>

            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
            </div>
            <div class="form-group" id="RadioButtonStatus">
                <label class="control-label col-3" style="text-align:right">Active</label>
                @Html.RadioButtonFor(m => m.status, true, new { id = "True" })

                <label class="control-label col-3" style="text-align:right">Inactive</label>
                @Html.RadioButtonFor(m => m.status, false, new { id = "False" })

                <br />
                <span asp-validation-for="status" class="text-danger" />
            </div>
          
            <hr />
            <div class="form-group">
                <input type="hidden" asp-for="created_by" />
                <input type="hidden" asp-for="created_date" />
                <input type="submit" value="Edit Assignment" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
